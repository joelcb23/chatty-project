generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  name             String
  email            String         @unique
  password         String
  sentMessages     Message[]      @relation("senderId")
  receivedMessages Message[]      @relation("receiverId")
  conversations    Participants[]
}

model Message {
  id             Int          @id @default(autoincrement())
  message        String
  createdAt      DateTime     @default(now())
  sender         User         @relation("senderId", fields: [senderId], references: [id])
  senderId       Int
  receiver       User         @relation("receiverId", fields: [receiverId], references: [id])
  receiverId     Int
  Conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId Int
}

model Conversation {
  id           Int            @id @default(autoincrement())
  isGroup      Boolean        @default(false)
  Participants Participants[]
  Messages     Message[]
}

model Participants {
  id             Int          @id @default(autoincrement())
  userId         Int
  conversationId Int
  Users          User         @relation(fields: [userId], references: [id])
  Conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@unique([userId, conversationId])
}
